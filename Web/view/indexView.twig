{% extends "templates/indexLayout.html.twig" %}



    {% block carrito %}
        No has a침adido productos
        <a id="carritobtn" class="color-egibide-bg btn btn-primary mt-5 w-100 hidden">Tramitar
                                pedido</a>
    {% endblock %}

    {% block productos %}

        {% for categoria in categorias %}
            <div id="accordion{{ categoria.categoria|replace({' ': ''}) }}">
                <a class="producto collapsed" data-toggle="collapse" data-target="#collapse{{ categoria.categoria|replace({' ': ''}) }}"
                    aria-expanded="false" aria-controls="collapse{{ categoria.categoria|replace({' ': ''}) }}">
                    <div id="heading{{ categoria.categoria|replace({' ': ''}) }}" class="item-separation" onclick="rotateArrow('arrow{{ categoria.categoria|replace({' ': ''}) }}');">
                        <h2 class="color-egibide" id="{{ categoria.categoria|replace({' ': ''}) }}">{{ categoria.categoria|capitalize }}</h2>
                        <img id="arrow{{ categoria.categoria|replace({' ': ''}) }}" class="img-fluid" src="img/arrow-down.svg">
                    </div>
                </a>
                <div id="collapse{{ categoria.categoria|replace({' ': ''}) }}" class="collapse" aria-labelledby="heading{{ categoria.categoria|replace({' ': ''}) }}" data-parent="#accordion{{ categoria.categoria|replace({' ': ''}) }}">
                    <ul class="list-group">
                        {% for producto in productos %}
                            {% if categoria.categoria == producto.CATEGORIA %}
                                    <button type="button" class="p-4 list-group-item list-group-item-action item-separation" data-toggle="modal" data-target="#m{{ producto.ID_PRODUCTO }}">

                                        <span>{{ producto.NOMBRE }}</span>
                                        {% if producto.MEDIDA == "R" %}
                                            <span>Precio raci칩n = {{ producto.PRECIO }} $</span>
                                        {% elseif producto.MEDIDA == "K" %}
                                            <span>Precio kilo = {{ producto.PRECIO }} $</span>
                                        {% else %}
                                            <span>Precio unidad = {{ producto.PRECIO }} $</span>
                                        {% endif %}
                                    </button>

                            {% endif %}            

                            <div class="modal fade" id="m{{ producto.ID_PRODUCTO }}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content bg-white">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Datos Producto</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="" method="post">
                                                <span>Nombre : {{ producto.NOMBRE }}</span><br>

                                                {% if producto.MEDIDA == "R" %}
                                                    <span>Precio raci칩n = {{ producto.PRECIO }} $</span>
                                                {% elseif producto.MEDIDA == "K" %}
                                                    <span>Precio kilo = {{ producto.PRECIO }} $</span>
                                                {% else %}
                                                    <span>Precio unidad = {{ producto.PRECIO }} $</span>
                                                {% endif %}

                                                <div class="form-group">
                                                    <label for="unidades">Unidades</label>
                                                    <input type="number" class="form-control" id="unidades" name="unidades" pattern="[0-9]" min="{{ producto.PEDIDO_MIN }}" value="0">
                                                </div>

                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                <button type="submit" class="btn btn-primary">A침adir al carrito</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}

                    </ul>
                </div>
            </div>
            <hr class="mb-1">
        {% endfor %}
    {% endblock %}

