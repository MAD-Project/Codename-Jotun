{% extends "templates/adminLayout.twig" %}

{% block container %}
    <h5>{{nombreUsuario?"Bienvenido"}}</h5><p style='color:blue'>{{ nombreUsuario }}</p>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#pedidos" role="tab" aria-controls="nav-home" aria-selected="true">Pedidos</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#productos" role="tab" aria-controls="nav-profile" aria-selected="false">Productos</a>
            <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#estadisticas" role="tab" aria-controls="nav-contact" aria-selected="false">Estad√≠sticas</a>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="pedidos" role="tabpanel" aria-labelledby="nav-home-tab">...</div>
        <div class="tab-pane fade" id="productos" role="tabpanel" aria-labelledby="nav-profile-tab">
                <table class="table mt-2 text-center body">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Medida</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Pedido Min</th>
                        <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for producto in productos %}
                        <tr>
                            <td> {{ producto.NOMBRE }} </td>
                            <td> {{ producto.CATEGORIA }} </td>
                            <td> {{ producto.MEDIDA }} </td>
                            <td> {{ producto.PRECIO }} </td>
                            <td> {{ producto.PEDIDO_MIN }} </td>
                            <td>
                                <a href="" class="btn btn-outline-info">Modificar</a>
                                <a href="" class="btn btn-outline-danger">Borrar</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

        </div>
        <div class="tab-pane fade" id="estadisticas" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
    </div>
{% endblock %}