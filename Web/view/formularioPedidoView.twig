{% extends "templates/indexLayout.html.twig" %}

{% block container %}
    <form method="POST" action="index.php?controller=pedidos&action=realizarPedido">
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Correo</label>
            <div class="col-sm-10">
                <input type="email" class="form-control"  name="email" id="email" placeholder="ejemplo@ejemplo.com" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="telefono" class="col-sm-2 col-form-label">Teléfono</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="telefono" name="telefono">
            </div>
        </div>
        <div class="form-group row">
            <label for="comentario" class="col-sm-2 col-form-label">Teléfono</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="comentario" name="comentario"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" name="enviar">Enviar</button>
            </div>
        </div>
    </form>


{% endblock %}