{% extends "templates/adminLayout.twig" %}

{% block container %}
<form class="mt-5" method="POST" action="index.php?controller=administradores&action=comprobarDatos">
    <div class="form-group">
        <label for="user">Usuario</label>
        <input type="text" class="form-control" id="user" name="user" placeholder="Usuario" REQUIRED>
    </div>
    <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password"placeholder="Contraseña" REQUIRED>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
{% endblock %}